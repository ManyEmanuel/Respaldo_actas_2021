@model WebComputos.Models.ViewModels.DemarcacionVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
<h3 class="text-center">Editar demarcación</h3>
<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Demarcacion.idDemarcacion" />
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Demarcacion.Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Demarcacion.Nombre" class="form-control" />
                    <span asp-validation-for="Demarcacion.Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Demarcacion.noDemarcacion"></label>
                </div>
                <div class="col-8">
                    <input type="number" asp-for="Demarcacion.noDemarcacion" class="form-control" />
                    <span asp-validation-for="Demarcacion.noDemarcacion" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Demarcacion.Redemarcacion"></label>
                </div>
                <div class="col-8">
                    <input type="number" asp-for="Demarcacion.Redemarcacion" class="form-control" />
                    <span asp-validation-for="Demarcacion.Redemarcacion" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Demarcacion.Municipio"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Demarcacion.Municipio, Model.LMunicipio,
                     "-Porfavor seleccione un municipio-", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" asp-route-id="@Model.Demarcacion.idDemarcacion" class="btn btn-success form-control">Guardar Cambios</button>
                            &nbsp;
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger form-control">voler a lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>