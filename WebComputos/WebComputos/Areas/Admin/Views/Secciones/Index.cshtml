
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de secciones</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>Crear Nueva sección</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblSeccion" class="table table-striped table-bordered " style="width:100%">
        <thead>
            <tr>
                <th>#</th>
                <th>Seccion</th>
                <th>Distrito</th>
                <th>Demarcación</th>
                <th>Municipio</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/Seccion.js">
    </script>
}


