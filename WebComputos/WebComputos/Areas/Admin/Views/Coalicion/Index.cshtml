
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Lista de coalición</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>Crear nueva coalición</a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblCoalicion" class="table table-striped table-bordered " style="width:100%">
        <thead>
            <tr>
                <th>#</th>
                <th>Nomre</th>
                <th>Siglas</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/Coalicion.js">
    </script>
}
