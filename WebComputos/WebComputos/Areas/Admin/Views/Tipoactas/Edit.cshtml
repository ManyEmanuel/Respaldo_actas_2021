@model WebComputos.Models.ViewModels.TipoActaVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<h3 class="text-center">Crear tipo acta</h3>
<form method="post" asp-action="Create">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TipoActa.Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TipoActa.Nombre" class="form-control" />
                    <span asp-validation-for="TipoActa.Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TipoActa.TipoEleccion"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.TipoActa.TipoEleccion, Model.LEleccion,
                     "-Porfavor seleccione un tipo elección-", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <partial name="_GuardarVolver" />
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-4">
                <div class="row">
                    <div class="col">
                        <button type="submit" asp-route-id="@Model.TipoActa.IdActa" class="btn btn-success form-control">Guardar Cambios</button>
                        &nbsp;
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger form-control">voler a lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

