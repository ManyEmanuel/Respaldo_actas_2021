
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <br />
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Lista de paquetes recibidos</h2>
            </div>
            <div class="col-6 text-right">
                <p>
                    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Registrar nuevo paquete</a>
                </p>
            </div>
        </div>
        <br />
        <br />
        <table id="tblRecepcion" class="table table-striped table-bordered " style="width:100%">
            <thead>
                <tr>
                    <th>Sección</th>
                    <th>Casilla</th>
                    <th>Recepción</th>
                    <th>Id Recepcion</th>
                    <th></th>
                </tr>
            </thead>
        </table>

        <br />
        <br />
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-8">
                        <h6><p> Avance de los paquetes recibidos y capturados</p></h6> 
                        
                    </div>
                    <div class="col-md-2">
                        <h6 class="text-primary"><p class="text-center"> @ViewBag.Recibidos de @ViewBag.Total</p></h6> <br /> 
                        
                    </div>
                    <div class="col-md-2">
                        <h6 class="text-primary"><p class="text-center"> @ViewBag.Porcentaje %</p></h6> <br /> 
                        
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                
            </div>
        </div>

    </div>

@section Scripts
{
    <script src="~/js/Recepcion.js">
    </script>
}
